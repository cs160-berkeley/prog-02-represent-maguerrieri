<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_height"
    android:paddingTop="@dimen/list_item_top_padding"
    android:paddingLeft="@dimen/list_item_horizontal_padding"
    android:orientation="vertical">
    <TextView
        android:id="@+id/list_item_rep_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/list_item_horizontal_padding"
        android:textSize="16sp"
        android:textColor="@color/darkerText"/>
    <TextView
        android:id="@+id/list_item_rep_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/list_item_horizontal_padding"
        android:layout_below="@+id/list_item_rep_title"
        android:textSize="14sp"
        android:textColor="@color/darkText"/>
    <View
        android:id="@+id/list_item_rep_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/divider"
        android:visibility="gone"/>
</RelativeLayout>