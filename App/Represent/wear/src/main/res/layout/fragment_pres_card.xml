<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">
        <FrameLayout
            android:id="@+id/obama_tile"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/obama_photo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/obama"
                android:scaleType="centerCrop"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/trans_blue"/>
        </FrameLayout>
        <FrameLayout
            android:id="@+id/romney_tile"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/romney_photo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/romney"
                android:scaleType="centerCrop"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/trans_red"/>
        </FrameLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:padding="@dimen/dismiss_padding"
        android:orientation="vertical"
        android:background="@color/lighter_grey">
        <TextView
            android:id="@+id/loc_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Alameda County, CA"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textColor="@color/darkText"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/obama_num"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="79%"
                android:textAlignment="center"
                android:textSize="48sp"
                android:textColor="@color/colorPrimaryDark"/>
            <TextView
                android:id="@+id/romney_num"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="18%"
                android:textAlignment="center"
                android:textSize="48sp"
                android:textColor="@color/colorAccent"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>